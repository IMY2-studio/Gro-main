
{%- if section.settings.heading != blank -%}
    

<section class="layout--grid bg-white text-green relative pt-[136px] lg:pt-[176px] pb-[80px] lg:pb-[120px]">
    <div class="col-span-2 lg:col-span-6">

        <h1 class="heading-1 mb-[4px]">
            {{ section.settings.heading }} 
        </h1>

        {%- if section.settings.blurb != blank -%}

        <div class="rte space-y-[20px]">
                {{ section.settings.blurb }}
        </div>
            
        {%- endif -%}

        </div>
    </section>

{%- endif -%}


{% schema %}
    {
        "name": "Heading Text",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "Heading Text",
                "default": "Careers"
            },
            {
                "type": "richtext",
                "id": "blurb",
                "label": "Blurb"
            }
        ],
        "blocks": [],
        "presets": [
        {
            "name": "Heading Text",
            "blocks": []
        }
    ]
}
{% endschema %}