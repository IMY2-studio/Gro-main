
{%- if section.settings.heading != blank -%}
    

<section class="bg-white text-green px-[16px] lg:px-[20px] relative pt-[136px] lg:pt-[176px] pb-[16px] {% if section.settings.padding == true %} mb-[84px] {% endif %}">

        <h1 class="heading-1">
            {{ section.settings.heading }} 
        </h1>

    </section>

{%- endif -%}


{% schema %}
    {
        "name": "Page Heading",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "Heading Text",
                "default": "Locations"
            },
            {
                "type": "checkbox",
                "id": "padding",
                "label": "Add padding bellow heading",
                "default": false
            }
        ],
        "blocks": [],
        "presets": [
        {
            "name": "Page Heading",
            "blocks": []
        }
    ]
}
{% endschema %}