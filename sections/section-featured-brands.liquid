{%- liquid
  assign brand_blocks = section.blocks | where: 'type', 'brand'
-%}

<section class="layout--grid">
  <div class="col-span-12">
    <h2 class="heading-1 mb-[16px]">
      {{ section.settings.heading }}
    </h2>
  </div>
  {%- for block in brand_blocks -%}
    <div class="col-span-6">
      <a href="{{ block.settings.collection.url }}">
        <div class="collection-card-image--wrapper mb-[16px] h-auto group overflow-hidden">
          {{
            block.settings.collection.image
            | image_url: width: 900
            | image_tag:
              loading: 'lazy',
              class: 'lg:group-hover:scale-[1.1] transition-all w-full h-auto relative flex object-center aspect-video object-cover'
          }}
        </div>
      </a>
      <h2 class="heading-1 mb-[16px]">
        {{ block.settings.collection.title }}
      </h2>
    </div>
  {%- endfor -%}
</section>
{% schema %}
{
  "name": "Featured Brands",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading Text",
      "default": "Shop Designer Brands"
    }
  ],
  "blocks": [
    {
      "type": "brand",
      "name": "Brand",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Brand",
          "info": "Choose the collection (Brand) you'd like to feature"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Brands",
      "blocks": []
    }
  ]
}
{% endschema %}
