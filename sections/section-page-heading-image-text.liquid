
{%- if section.settings.heading != blank -%}
    

    <section class="layout--grid bg-white text-green px-[16px] lg:px-[20px] relative pt-[136px] lg:pt-[176px] pb-[16px]">

        <div class="col-span-2 lg:col-start-1  lg:col-span-6 mb-[20px] lg:mb-[40px] flex flex-col">
            <h1 class="heading-1">
                {{ section.settings.heading }} 
            </h1>


            {%- if section.settings.text != blank -%}

            <div class="rte mb-[40px]">
                {{ section.settings.text }}
            </div>
                
            {%- endif -%}
            
        </div>

        {%- if section.settings.image != blank -%}
            
            <div class="col-span-2 lg:col-start-1 lg:col-span-6 mb-[40px] lg:mb-[84px]">
                <div class="w-full relative aspect-[927/624] overflow-hidden">
                    {{ section.settings.image | image_url: width: 927 | image_tag: loading: 'eager', class: 'w-full h-full object-cover object-center max-w-none' }}
                </h1>
            </div>

        {%- endif -%}

    </section>

{%- endif -%}


{% schema %}
    {
        "name": "Page Heading text Image",
        "class": "page-section-hti",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "Heading Text",
                "default": "Locations"
            },
            {
                "type": "image_picker",
                "id": "image",
                "label": "Hero Image"
            },
            {
                "type": "richtext",
                "id": "text",
                "label": "Sub heading / text",
                "default": "<p></p>"
            }
        ],
        "presets": [
        {
            "name": "Page Heading text Image",
            "blocks": []
        }
    ]
}
{% endschema %}